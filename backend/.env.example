# Database Configuration
MONGODB_URI=mongodb://localhost:27017/muscleup
# For MongoDB Atlas (recommended for production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/muscleup

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRE=30d

# Server Configuration
PORT=3000
NODE_ENV=development

# API Keys for External Services
EXERCISEDB_API_KEY=your-exercisedb-api-key-from-rapidapi
USDA_API_KEY=your-usda-food-data-central-api-key

# OAuth Configuration - Google
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth Configuration - Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# OAuth Configuration - Apple (Optional)
APPLE_SERVICE_ID=your-apple-service-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# Email Configuration (for password reset, notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@muscleup.com

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:5500
# For production, add your domain:
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Session Configuration
SESSION_SECRET=another-super-secret-key-for-sessions

# File Upload Configuration (if needed)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging Level
LOG_LEVEL=info

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/health

# Cache Configuration (Redis - optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Production Specific
# SSL_KEY_PATH=path/to/ssl/key.pem
# SSL_CERT_PATH=path/to/ssl/cert.pem

# Backup Configuration
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn-for-error-tracking
# NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# Analytics (optional)
# GOOGLE_ANALYTICS_ID=your-google-analytics-id
